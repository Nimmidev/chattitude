<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<VBox fx:id="messageCell" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <BorderPane>
            <center>
                <Label fx:id="senderLabel" text="Tony Stark" textFill="#4363a4" BorderPane.alignment="CENTER_LEFT">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                    <BorderPane.margin>
                        <Insets right="10.0" />
                    </BorderPane.margin>
                </Label>
            </center>
            <right>
                <Label fx:id="timeLabel" text="12:34" textFill="#727272" BorderPane.alignment="TOP_RIGHT">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
            </right>
        </BorderPane>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="50.0" prefHeight="10.0" prefWidth="50.0" style="-fx-background-color: #eeeeee; -fx-background-radius: 7px;" VBox.vgrow="NEVER">
         <children>
            <Label fx:id="txtRepliedSender" text="Peter Parker" textFill="#4363a4">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="txtRepliedMessage" text="Quoted message" textFill="#000000">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" right="5.0" top="5.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
        <TextFlow fx:id="contentLabel" />
        <!--<Label fx:id="contentLabel" textFill="#333" text="Hello whats popping? Do you wanna go outside?" wrapText="true" />-->
    </children>
</VBox>
